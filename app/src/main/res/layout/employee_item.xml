<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/empIv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:src="@drawable/pink_flowers"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/empNameTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shishir"
                        android:textAlignment="viewStart"
                        android:textSize="17sp"
                        android:textFontWeight="700"
                        android:textColor="#1e1e1e"/>

                    <TextView
                        android:id="@+id/empTypeTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="STAFF"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        android:textFontWeight="900"
                        android:textColor="#1e1e1e"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/empEmailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="shishir.mangal@gmail.com"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:textColor="#ee1e1e1e"
                    android:textAlignment="viewStart"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/empMobTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="9471067973"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        android:textFontWeight="500"
                        android:textColor="#ee1e1e1e"/>

                    <TextView
                        android:id="@+id/empSalTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â‚¹ 20,000"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:textFontWeight="700"
                        android:textColor="#ee1e1e1e"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="9dp"
                        android:src="@drawable/location_icon_15dp"/>

                    <TextView
                        android:id="@+id/empAddTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chiramugath House, University P.O.,CUSAT, Kochi, Kerala-682022"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        android:textFontWeight="500"
                        android:textColor="#444444"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>