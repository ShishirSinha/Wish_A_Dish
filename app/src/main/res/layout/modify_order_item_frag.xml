<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0000000"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="#ffffff"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="34dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modifyItemNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paneer Butter Masala"
                android:layout_gravity="center_horizontal"
                android:textColor="#1E1E1E"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/modifyItemRateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Rate :   â‚¹320"
                android:textColor="#B31E1E1E"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:text="Quantity"
                android:textStyle="bold"
                android:textColor="#CC1E1E1E"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/modifyItemRemoveIV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/decrease_icon"/>

                <TextView
                    android:id="@+id/modifyItemQuantityTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="1"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"/>

                <ImageView
                    android:id="@+id/modifyItemAddTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/increase_icon"/>

            </LinearLayout>

            <Button
                android:id="@+id/modifyItemConfirmBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:background="@drawable/rounded_button"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>