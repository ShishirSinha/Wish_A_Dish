<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Name*"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_emp_name"
                android:layout_width="289dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_et"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="20dp" />

            <TextView
                android:id="@+id/tv_emp_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Email*"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_emp_email"
                android:layout_width="289dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_et"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="20dp" />

            <TextView
                android:id="@+id/tv_emp_mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Mobile Number*"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_emp_mob"
                android:layout_width="243dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_et"
                android:ems="10"
                android:inputType="numberDecimal"
                android:paddingStart="20dp" />

            <TextView
                android:id="@+id/tv_emp_mob_alt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Mobile Number(Alternate)"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_emp_mob_alt"
                android:layout_width="243dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_et"
                android:ems="10"
                android:inputType="numberDecimal"
                android:paddingStart="20dp" />

            <TextView
                android:id="@+id/tv_emp_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Aadhar"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_emp_aadhar"
                android:layout_width="243dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_et"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="20dp" />

            <TextView
                android:id="@+id/tv_emp_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Password"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_emp_password"
                android:layout_width="243dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_et"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingStart="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Employee Type"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_border"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_emp_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:entries="@array/Employee_type"
                        android:gravity="left"
                        android:prompt="@string/emp_type"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignRight="@id/spinner_emp_type"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/dropdown_arrow" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_et"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingStart="7dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="7dp"
                    android:src="@drawable/ic_control_point_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:text="Salary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_emp_salary"
                        android:layout_width="122dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_et"
                        android:ems="10"
                        android:inputType="number"
                        android:paddingStart="15dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:text="Join Date"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_emp_join_date"
                        android:layout_width="122dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_et"
                        android:ems="10"
                        android:inputType="date"
                        android:paddingStart="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:text="Salary Period"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="122dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_border"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_sal_period"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="0dp"
                            android:entries="@array/Period"
                            android:prompt="@string/salary_period"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignRight="@id/spinner_sal_period"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/dropdown_arrow" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:text="Holidays Allowed"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_emp_holidays_allowed"
                        android:layout_width="122dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_et"
                        android:ems="10"
                        android:inputType="date"
                        android:paddingStart="15dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Picture"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bt_choose_pic_file"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_et"
                        android:backgroundTint="@color/colorPrimary"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_photo_white_24dp" />

                    <TextView
                        android:layout_width="59dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:text="Choose File" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bt_choose_pic_camera"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_et"
                        android:backgroundTint="@color/colorPrimary"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_add_a_photo_white_24dp" />

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="5dp"
                        android:text="Open Camera" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:text="Address"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_emp_address"
                android:layout_width="289dp"
                android:layout_height="144dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_et"
                android:ems="10"
                android:inputType="text"
                android:paddingStart="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="5dp"
                android:text="Add Employee"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>