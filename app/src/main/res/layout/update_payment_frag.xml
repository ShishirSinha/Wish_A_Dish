                        android:textAlignment="viewStart"
                        android:entries="@array/payment_method"
                        android:prompt="@string/paymentMethod"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
