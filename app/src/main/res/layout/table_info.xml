<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tableNumberTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="10dp"
                android:text="Table No. #7"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1E1E1E"/>


            <TextView
                android:id="@+id/tableSizeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tableNumberTv"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:text="4 people"
                android:textColor="#545454"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>


            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@drawable/settings_icon_border_green"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/ll3"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="42dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tableSettingsBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/settings_icon_green" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@drawable/delete_icon_border_red"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/tableOnlineSwitch"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="42dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/deleteTableBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trash_icon" />

            </LinearLayout>

            <Switch
                android:id="@+id/tableOnlineSwitch"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:theme="@style/SCBSwitch"
                android:layout_marginTop="19dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>